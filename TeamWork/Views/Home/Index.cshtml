@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Home Page ~ UserLayout";
    
    }
<div class="text-center">
    <h1 class="display-4">Welcome</h1>   
</div>

<div id="HomePhoto" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

        @for (int c = 1; c <= 2; c++)
            {
                <div class="carousel-item @(c == 1 ? "active":"")">
                <div class="d-flex justify-content-center">
                    <img src="~/photos/@(c).jpg" class="d-block w-50 img-thumbnail mx-auto">
                </div>

                </div>
                
            }

