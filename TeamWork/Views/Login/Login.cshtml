@model Teamwork.Models.Account

@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center mt-5 display-3">Login</h1>

<h4>@* Account *@</h4>

<div class="container">
<div class="row justify-content-center">
        <div class="col-sm-8 col-md-7 col-lg-4 fs-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountID" class="control-label"></label>
                <input asp-for="AccountID" class="form-control" />
                <span asp-validation-for="AccountID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                    <div class="input-group">

                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control" id="passwordInput" autocomplete="off" required style="border-right: none;" />
                            <span class="input-group-text" id="togglePassword" style=" background: white; border-left: none;">
                                <i class="bi bi-eye-slash"></i>
                            </span>
                        </div>
                    </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="text-danger">
                @ViewData["Message"]
            </div>
                <div class="form-group mt-4  d-flex justify-content-center">
                    <input type="submit" value="登入" class="btn btn-outline-dark fs-5" />
            </div>
        </form>
    </div>
</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   

    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordInput = document.getElementById('passwordInput');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.innerHTML = '<i class="bi bi-eye"></i>';
            } else {
                passwordInput.type = 'password';
                
                this.innerHTML = '<i class="bi bi-eye-slash"></i>';

            }
        });
    </script>


}
